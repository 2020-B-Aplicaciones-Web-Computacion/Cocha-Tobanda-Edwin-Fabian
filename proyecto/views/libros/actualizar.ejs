<br><h3> ACTUALIZAR LIBROS</h3><br>
<% let libro= datos %>
<form action="/libro/actualizar?id=<%= params.id %>" method="post">
    <label for="isbn">ISBN</label>
    <input id="isbn" type="text" name="isbn" placeholder="<%= libro.ISBN %>">
    <br><br>
    <label for="titulo">Título</label>
    <input id="titulo" type="text" name="titulo" placeholder="<%= libro.titulo %>">
    <br><br>
    <label for="anio">Año Publicación</label>
    <input id="anio" type="text" name="anio" placeholder="<%= libro.anio_lanzamiento %>">
    <br><br>
    <label for="idioma">Idioma</label>
    <input id="idioma" type="text" name="idioma" placeholder="<%= libro.idioma %>">
    <br><br>
    <label for="pais">País Publicación</label>
    <input id="pais" type="text" name="pais" placeholder="<%= libro.pais_publicacion %>">
    <br><br>
    <button type="submit">Actualizar</button>
    <button type="reset">Limpiar</button>
</form>
<a href="/libro/libros">
    <button>Cancelar</button>
</a>